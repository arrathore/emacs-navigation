{
    "manifest_version": 3,
    "name": "Emacs Navigation",
    "version": "1.0",
    "description": "Use Emacs-like keybinds to navigate webpages",
    "permissions": ["tabs", "scripting", "activeTab"],
    "background": {
	"service_worker": "background.js",
	"scripts": ["background.js"]
    },
    "commands": {
	"next-line": {
	    "suggested_key": {
		"default": "MacCtrl+N"
	    },
	    "description": "Move down a little"
	},
	"previous-line": {
	    "suggested_key": {
		"default": "MacCtrl+P"
	    },
	    "description": "Move up a little"
	},
	"scroll-up-command": {
	    "suggested_key": {
		"default": "MacCtrl+V"
	    },
	    "description": "Scroll the page up almost one screen"
	},
	"scroll-down-command": {
	    "suggested_key": {
		"default": "Alt+V"
	    },
	    "description": "Scroll the page down almost one screen"
	},
	"forward-char": {
	    "suggested_key": {
		"default": "MacCtrl+F"
	    },
	    "description": "Move to the right a little"
	},
	"backward-char": {
	    "suggested_key": {
		"default": "MacCtrl+B"
	    },
	    "description": "Move to the left a little"
	}
    }
}
